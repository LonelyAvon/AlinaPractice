<Page x:Class="AlinaPractice.Pages.Auto"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AlinaPractice.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Auto">

    <Grid >
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="552" Height="278">
            <TextBlock Text="Логин" HorizontalAlignment="Center" FontSize="30"/>
            <TextBox x:Name="Login" Margin="20" FontSize="20"/>
            <TextBlock Text="Пароль" HorizontalAlignment="Center" FontSize="30"/>
            <PasswordBox x:Name="Password" Margin="20" FontSize="20"/>
            <Button x:Name="AutoButton" Click="AutoButton_Click" Content="Войти" FontSize="30" HorizontalAlignment="Center" Background="LightGreen"/>
        </StackPanel>
    </Grid>
</Page>
